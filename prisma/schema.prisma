datasource db {
  provider     = "mongodb"
  url          = env("MONGODB_DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model VampLevels {
  id    Int  @id @map("_id")
  name  String
  exp Int
  level Int
}


model botcommands {
 command_id Int @id @map("_id")
 command String
 usage_count Int
 category String

 @@map("botcommands")
}

model Settings {
  id String @id @map("_id")
  guildid String
  command String
  category String
  turnedOn Int
}

model LevelRoles{
  id Int @id @map("_id")
  guildID String
  level Int
  roleID String @unique
  @@map("levelRoles")
}